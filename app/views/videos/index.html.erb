<head>
        <title>Angry Birds Fan Club</title>
        <link rel="stylesheet" href="/css/stylesheet2.css">
        <link rel="stylesheet" href="/css/stylesheet3.css">
</head>
<body>
    <div id="conteiner">
        <div id="body">
        
                <div id="header">
                        <div id="imagen">
                            <img src="/picture/logo2.png"  height="75" >
                    </div>
                </div>
                <div id="navegador" class="borde">
                        <nav >
                                <ul>
                                    <li><a href="/start" >Inicio</a></li>
                                    <li><a href="/noticia" >Noticias</a></li>
                                    <li><a href="404" >Im√°genes</a></li>
                                    <li><a href="/videos" >Videos</a></li>
                                </ul>
                                
                    </nav>
                    <img src=<%= @persona.genero ? ("/picture/hombre.png") : ("/picture/mujer.png") %> src="" id="fotoPerfil" >
                </div>
                <div id="titulo" class="borde">
                    Videos
                </div>
                <div id="accesoDirecto" class="borde">
                    <a href="/videos/new" >
                        <div id="accesoDirecto1">
                            Agregar Video
                        </div>
                    </a>
                    <a href="" >
                        <div id="accesoDirecto2">
                            Mis Videos
                        </div>
                    </a>
                </div>
                <div id="contenido" width="1020px" >
                    
                    <ul id="listado_videos"> 
                    <% @videos.each do |app| %>
                         <li>  <div class="video-borde">
				<div class="contenedor">					
                              		<div class="titulo">
						<p><%= app.titulo %></p>
					</div>
					<div  class="video_conteiner" >
                                    		<iframe type="text/html" width="100%" height="100%" frameborder="0"src="<%= app.url%>"></iframe>
                               		</div>
				</div>
                            </div>
                        <li>
                    <% end %>
                    </ul>
                    <%= will_paginate @videos, :previous_label => t("< anterior"), :next_label => t("siguiente >"), :page_gap => "...", :outer_window   => '1', :inner_window => '1', :link_separator => ' - ' %>
                </div>        
        </div>
        <div id="footer" style="top:  150px;">
            <a href="/logout"  >
                <img src="/picture/exit1.png" style=" margin-top: 30px; margin-left: 20px;">
            </a>
        </div>
    </div>    
</body>
