<% unless  @error%>

    $("#espera").hide();
    $("#respuesta_ok p").html("El nombre de usuario ha sido cambiado exitosamente!!!");
    $("#respuesta_ok").show();

<% else %>

    $("#espera").hide();
    $("#respuesta_fail p").html("<%= @mensaje %>");
    $("#respuesta_fail").show();
    $("#persona_username").val('<%=@persona.username%>');
<% end %>