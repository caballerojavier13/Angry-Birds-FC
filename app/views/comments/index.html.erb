<h1>Listing comments</h1>

<table>
  <tr>
    <th>Usuario</th>
    <th>Integer</th>
    <th>Noticia</th>
    <th>Integer</th>
    <th>Cuerpo</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.usuario_id %></td>
    <td><%= comment.integer %></td>
    <td><%= comment.noticia_id %></td>
    <td><%= comment.integer %></td>
    <td><%= comment.cuerpo %></td>
    <td><%= comment.text %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

