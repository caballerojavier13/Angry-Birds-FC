<head>
        <title>Angry Birds Fan Club</title>
        <link rel="stylesheet" href="/css/stylesheet2.css">
        <link rel="stylesheet" href="/css/stylesheet3.css">
        <link rel="stylesheet" href="/css/stylesheet5.css">
</head>
<body>
        <div id="body">
        
                <div id="header">
                        <div id="imagen">
                            <img src="/picture/logo2.png"  height="75" >
                    </div>
                </div>
                <div id="navegador" class="borde">
                        <nav >
                                <ul>
                                    <li><a href="/start" >Inicio</a></li>
                                    <li><a href="/noticia" >Noticias</a></li>
                                    <li><a href="404" >Imágenes</a></li>
                                    <li><a href="/videos" >Videos</a></li>
                                </ul>
                                
                    </nav>
                    <img src=<%= @persona.genero ? ("/picture/hombre.png") : ("/picture/mujer.png") %> src="" id="fotoPerfil" >
                </div>
                <div id="titulo" class="borde">
                    Noticias
                </div>
                <div id="accesoDirecto" class="borde">
                    <a href="/noticia/new" >
                        <div id="accesoDirecto1">
                            Agregar Noticia
                        </div>
                    </a>
                    <a href="" >
                        <div id="accesoDirecto2">
                            Mis Noticias
                        </div>
                    </a>
                </div>
                        
        </div>
        <div id="form_new">
        <%= form_for(@noticium) do |f| %>
          <% if @noticium.errors.any? %>
        <div id="error">
            <div id="error_title">
                <h2>Error en la registración, se <%= @noticium.errors.count > 1 ? "han" : "ha" %> encontrado <%= @noticium.errors.count%> <%= @noticium.errors.count > 1 ? "errores" : "error" %>:</h2>
           </div>
           <ul>
           <% @noticium.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
           <% end %>
           </ul>
        </div>
   <% end %>
        
          <div class="field">
            <%= f.label :titulo %><br />
            <%= f.text_field :titulo, :size => 30%>
          </div>
          <div class="field">
            <%= f.label :cuerpo %><br />
            <%= f.text_area :cuerpo %>
          </div>
          <div class="field">
            <%= f.label :imagen_id %><br />
            <%= f.number_field :imagen_id %>
          </div>
          <div class="actions field">
            <%= f.submit 'Guardar', :id=> 'boton_guardar' %>
          </div>
        <% end %>
        </div>
        <div id="footer">
            <a href="/logout"  >
                <img src="/picture/exit1.png" style=" margin-top: 30px; margin-left: 20px;">
            </a>
        </div>
        
</body>
