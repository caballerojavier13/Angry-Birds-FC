        var valor2 = $("#persona_fechaNacimiento_2i").val();
        var valor3 = $("#persona_fechaNacimiento_3i").val();
        var valor = valor1 + "-" +valor2 + "-" +valor3
        var request = $.ajax({
            type: "PUT",
