        $("#persona_mail").val($.get("mail"));
        $("#activo-check").prop('checked', to_bolean($.get("act")));
        $("#bloqueado-check").prop('checked', to_bolean($.get("bloq")));
        $("#admin-check").prop('checked',to_bolean($.get("admin")));
    });
</script>
